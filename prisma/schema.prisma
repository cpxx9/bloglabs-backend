generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?
  firstname String?
  lastname  String?
  admin     Boolean  @default(false)
  hash      String
  salt      String
  created   DateTime @default(now())
  updated   DateTime @default(now())
}
